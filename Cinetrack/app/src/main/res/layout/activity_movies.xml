<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">


        <TextView
            android:id="@+id/cineTrackHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="cursive"
            android:text="CineTrack"
            android:textColor="#FF0000"
            android:textSize="32sp"
            android:textStyle="bold" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            android:weightSum="2"
            android:gravity="center">

            <Spinner
                android:id="@+id/sortSpinnerFav"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp" />

            <Spinner
                android:id="@+id/filterSpinnerFav"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/card_bg"
            android:padding="8dp"
            android:layout_marginTop="16dp">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="150dp"
                android:src="@drawable/submovie"
                android:scaleType="centerCrop" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="The Pursuit of Happyness"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="The Pursuit of Happyness is a heart-touching movie that tells the real-life story of Chris Gardner, a struggling salesman who faces immense hardships while trying to provide a better life for his son. Despite losing his home, job, and financial stability, he never gives up. With unshakable determination and love for his child, he pushes through every obstacle, eventually earning a life-changing job. The movie is a powerful reminder that with hope, hard work, and resilience, we can rise above any challenge"
                    android:textColor="#CCCCCC"
                    android:textSize="12sp"
                    android:maxLines="4" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end|bottom"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/imdb2"
                        android:layout_marginEnd="4dp"
                        android:contentDescription="IMDb logo" />

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/star"
                        android:layout_marginEnd="4dp"
                        android:contentDescription="Star icon" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/card_bg"
            android:padding="8dp"
            android:layout_marginTop="16dp">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="150dp"
                android:src="@drawable/submovie2"
                android:scaleType="centerCrop" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Inception"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="Inception is a mind-bending sci-fi thriller that follows Dom Cobb, a skilled thief who specializes in stealing secrets from deep within the subconscious during dreams. He’s offered a rare chance to have his criminal record erased, but only if he can do the impossible—plant an idea into someone’s mind instead of stealing it. As Cobb and his team dive deeper into layers of dreams, his haunting memories and emotional scars begin to blur the line between reality and illusion. The movie explores the power of the mind, the pain of loss, and the question of what is truly real "
                    android:textColor="#CCCCCC"
                    android:textSize="12sp"
                    android:maxLines="4" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end|bottom"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/imdb2"
                        android:layout_marginEnd="4dp"
                        android:contentDescription="IMDb" />

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/star"
                        android:layout_marginEnd="4dp"
                        android:contentDescription="Star icon" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/card_bg"
            android:padding="8dp"
            android:layout_marginTop="16dp">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="150dp"
                android:src="@drawable/submovie3"
                android:scaleType="centerCrop" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Avengers: Endgame"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="Avengers: Endgame is an epic conclusion to a decade of superhero storytelling, where the remaining heroes come together after the universe has been shattered by Thanos. With loss weighing heavy on their hearts, the Avengers must unite one final time, risking everything to undo the damage and bring back what was lost. Through sacrifice, time travel, and unbreakable bonds, they face their greatest battle yet to restore hope and balance. It’s a story of courage, redemption, and the strength of unity in the face of unimaginable odds"
                    android:textColor="#CCCCCC"
                    android:textSize="12sp"
                    android:maxLines="4" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end|bottom"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/imdb2"
                        android:layout_marginEnd="4dp"
                        android:contentDescription="IMDb logo" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/card_bg"
            android:padding="8dp"
            android:layout_marginTop="16dp">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="150dp"
                android:src="@drawable/submovie4"
                android:scaleType="centerCrop" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Interstellar"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:textSize="16sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="Interstellar takes you on a breathtaking journey across space and time, where a group of explorers travel through a wormhole to find a new home for humanity. It’s a visually stunning and emotionally gripping story about love, sacrifice, and the relentless pursuit of survival. The film challenges our understanding of reality and the cosmos, leaving viewers with a sense of wonder and awe."
                    android:textColor="#CCCCCC"
                    android:textSize="12sp"
                    android:maxLines="4" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end|bottom"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/imdb2"
                        android:layout_marginEnd="4dp"
                        android:contentDescription="IMDb logo" />

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/star"
                        android:layout_marginEnd="4dp"
                        android:contentDescription="Star icon" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/card_bg"
            android:padding="8dp"
            android:layout_marginTop="16dp">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="150dp"
                android:src="@drawable/submovie5"
                android:scaleType="centerCrop" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Novocaine"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="Novocaine is a dark comedy thriller about a dentist named Frank, whose life takes a wild turn when a mysterious woman walks into his clinic and drags him into a crazy world of crime and deception. What starts as a simple routine gets tangled with lies, danger, and unexpected twists that keep you on the edge! It’s a mix of suspense and humor showing how even the most ordinary people can get caught up in extraordinary messes"
                    android:textColor="#CCCCCC"
                    android:textSize="12sp"
                    android:maxLines="4" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end|bottom"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/imdb2"
                        android:layout_marginEnd="4dp"
                        android:contentDescription="IMDb logo" />

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/star"
                        android:layout_marginEnd="4dp"
                        android:contentDescription="Star icon" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/card_bg"
            android:padding="8dp"
            android:layout_marginTop="16dp">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="150dp"
                android:src="@drawable/submovie6"
                android:scaleType="centerCrop" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="L2E : Empuraan"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="L2: Empuraan is a gripping political-action thriller that dives deep into the hidden world of Khureshi Ab’raam, the mysterious alter ego of Stephen Nedumpally. As the web of crime, politics, and power expands across global borders, the film explores the rise of an underground empire built on secrets, strategy, and sheer dominance. With intense confrontations, unexpected alliances, and emotional depth, the story unravels a legacy born from fire and ambition. It’s a bold and powerful journey that proves even in the darkest corners of politics, identity and purpose can shape destiny."
                    android:textColor="#CCCCCC"
                    android:textSize="12sp"
                    android:maxLines="4" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end|bottom"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/imdb2"
                        android:layout_marginEnd="4dp"
                        android:contentDescription="IMDb logo" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/card_bg"
            android:padding="8dp"
            android:layout_marginTop="16dp">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="150dp"
                android:src="@drawable/submovie7"
                android:scaleType="centerCrop" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="KGF:Chapter 1"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="KGF Chapter 1 is a raw and explosive action-drama that tells the rise of Rocky, a fearless rebel driven by a promise to his dying mother. Set against the gritty backdrop of Mumbai’s streets and the ruthless gold mines of Kolar, Rocky climbs the ranks of the underworld with unmatched determination and rage. As he battles brutal oppressors and cruel kings of the gold mafia, his legend begins to shake the very foundation of power. With stunning visuals, thumping music, and a hero born of fire, KGF shows that one man’s hunger for dominance can light up a revolution"
                    android:textColor="#CCCCCC"
                    android:textSize="12sp"
                    android:maxLines="4" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end|bottom"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/imdb2"
                        android:layout_marginEnd="4dp"
                        android:contentDescription="IMDb logo" />

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/star"
                        android:layout_marginEnd="4dp"
                        android:contentDescription="Star icon" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/card_bg"
            android:padding="8dp"
            android:layout_marginTop="16dp">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="150dp"
                android:src="@drawable/submovie8"
                android:scaleType="centerCrop" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Joker"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="Joker is a haunting psychological drama that dives into the fractured mind of Arthur Fleck, a failed comedian struggling to find his place in a cruel and disconnected society. Set in the decaying chaos of Gotham City, Arthur's slow descent into madness transforms him into the infamous symbol of anarchy — the Joker. With every painful laugh and chilling stare, the film explores themes of identity, mental illness, and societal neglect. Powered by Joaquin Phoenix’s breathtaking performance, Joker isn’t just a villain’s origin story — it’s a raw and unsettling mirror held up to the world"
                    android:textColor="#CCCCCC"
                    android:textSize="12sp"
                    android:maxLines="4" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end|bottom"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/imdb2"
                        android:layout_marginEnd="4dp"
                        android:contentDescription="IMDb logo" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
