<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- button heading -->
        <TextView
            android:id="@+id/cineTrackHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="cursive"
            android:text="CineTrack"
            android:textColor="#FF0000"
            android:textSize="32sp"
            android:textStyle="bold" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/card_bg"
            android:padding="8dp"
            android:layout_marginTop="16dp">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="150dp"
                android:src="@drawable/submovie"
                android:scaleType="centerCrop" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="The Pursuit of Happyness"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="The Pursuit of Happyness is a heart-touching movie that tells the real-life story of Chris Gardner, a struggling salesman who faces immense hardships while trying to provide a better life for his son. Despite losing his home, job, and financial stability, he never gives up. With unshakable determination and love for his child, he pushes through every obstacle, eventually earning a life-changing job. The movie is a powerful reminder that with hope, hard work, and resilience, we can rise above any challenge"
                    android:textColor="#CCCCCC"
                    android:textSize="12sp"
                    android:maxLines="4" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end|bottom"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/imdb2"
                        android:layout_marginEnd="4dp"
                        android:contentDescription="IMDb logo" />

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/star"
                        android:layout_marginEnd="4dp"
                        android:contentDescription="Star icon" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/card_bg"
            android:padding="8dp"
            android:layout_marginTop="16dp">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="150dp"
                android:src="@drawable/submovie2"
                android:scaleType="centerCrop" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Inception"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="Inception is a mind-bending sci-fi thriller that follows Dom Cobb, a skilled thief who specializes in stealing secrets from deep within the subconscious during dreams. He’s offered a rare chance to have his criminal record erased, but only if he can do the impossible—plant an idea into someone’s mind instead of stealing it. As Cobb and his team dive deeper into layers of dreams, his haunting memories and emotional scars begin to blur the line between reality and illusion. The movie explores the power of the mind, the pain of loss, and the question of what is truly real "
                    android:textColor="#CCCCCC"
                    android:textSize="12sp"
                    android:maxLines="4" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end|bottom"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/imdb2"
                        android:layout_marginEnd="4dp"
                        android:contentDescription="IMDb" />

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/star"
                        android:layout_marginEnd="4dp"
                        android:contentDescription="Star icon" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/card_bg"
            android:padding="8dp"
            android:layout_marginTop="16dp">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="150dp"
                android:src="@drawable/submovie4"
                android:scaleType="centerCrop" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Interstellar"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:textSize="16sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="Interstellar takes you on a breathtaking journey across space and time, where a group of explorers travel through a wormhole to find a new home for humanity. It’s a visually stunning and emotionally gripping story about love, sacrifice, and the relentless pursuit of survival. The film challenges our understanding of reality and the cosmos, leaving viewers with a sense of wonder and awe."
                    android:textColor="#CCCCCC"
                    android:textSize="12sp"
                    android:maxLines="4" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end|bottom"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/imdb2"
                        android:layout_marginEnd="4dp"
                        android:contentDescription="IMDb logo" />

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/star"
                        android:layout_marginEnd="4dp"
                        android:contentDescription="Star icon" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/card_bg"
            android:padding="8dp"
            android:layout_marginTop="16dp">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="150dp"
                android:src="@drawable/submovie5"
                android:scaleType="centerCrop" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Novocaine"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="Novocaine is a dark comedy thriller about a dentist named Frank, whose life takes a wild turn when a mysterious woman walks into his clinic and drags him into a crazy world of crime and deception. What starts as a simple routine gets tangled with lies, danger, and unexpected twists that keep you on the edge! It’s a mix of suspense and humor showing how even the most ordinary people can get caught up in extraordinary messes"
                    android:textColor="#CCCCCC"
                    android:textSize="12sp"
                    android:maxLines="4" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end|bottom"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/imdb2"
                        android:layout_marginEnd="4dp"
                        android:contentDescription="IMDb logo" />

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/star"
                        android:layout_marginEnd="4dp"
                        android:contentDescription="Star icon" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/card_bg"
            android:padding="8dp"
            android:layout_marginTop="16dp">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="150dp"
                android:src="@drawable/submovie7"
                android:scaleType="centerCrop" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="KGF:Chapter 1"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="KGF Chapter 1 is a raw and explosive action-drama that tells the rise of Rocky, a fearless rebel driven by a promise to his dying mother. Set against the gritty backdrop of Mumbai’s streets and the ruthless gold mines of Kolar, Rocky climbs the ranks of the underworld with unmatched determination and rage. As he battles brutal oppressors and cruel kings of the gold mafia, his legend begins to shake the very foundation of power. With stunning visuals, thumping music, and a hero born of fire, KGF shows that one man’s hunger for dominance can light up a revolution"
                    android:textColor="#CCCCCC"
                    android:textSize="12sp"
                    android:maxLines="4" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end|bottom"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/imdb2"
                        android:layout_marginEnd="4dp"
                        android:contentDescription="IMDb logo" />

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/star"
                        android:layout_marginEnd="4dp"
                        android:contentDescription="Star icon" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/card_bg"
            android:padding="8dp"
            android:layout_marginTop="16dp">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="150dp"
                android:src="@drawable/subseries1"
                android:scaleType="centerCrop" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Stranger Things"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="Stranger Things is a thrilling sci-fi mystery set in the small town of Hawkins, where a group of kids stumbles into a secret government experiment and a terrifying alternate dimension called the Upside Down. When young Will Byers disappears, his friends team up with a mysterious girl named Eleven who holds strange psychic powers and a hidden past. As dark forces rise and danger creeps into their world, friendship, courage, and nostalgia light the way. Blending supernatural chills with 80s charm, the series proves that even in the darkest shadows, the bonds of love and loyalty can save the day."
                    android:textColor="#CCCCCC"
                    android:textSize="12sp"
                    android:maxLines="4" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end|bottom"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/imdb2"
                        android:layout_marginEnd="4dp"
                        android:contentDescription="IMDb logo" />

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/star"
                        android:layout_marginEnd="4dp"
                        android:contentDescription="Star icon" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/card_bg"
            android:padding="8dp"
            android:layout_marginTop="16dp">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="150dp"
                android:src="@drawable/subseries4"
                android:scaleType="centerCrop" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Wednesday"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="Wednesday is a dark, witty, and delightfully twisted coming-of-age mystery centered around Wednesday Addams — the sharp-tongued, emotionless daughter of the iconic Addams family. As she joins Nevermore Academy, a school for outcasts and the supernatural, Wednesday finds herself unraveling a chilling prophecy, investigating a monstrous killing spree, and uncovering secrets buried deep in her own family’s past. With her deadpan humor, gothic charm, and razor-sharp intellect, she turns every creepy moment into pure power. It’s a tale where mystery, misfits, and macabre brilliance collide in the most wickedly fun way."
                    android:textColor="#CCCCCC"
                    android:textSize="12sp"
                    android:maxLines="4" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end|bottom"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/imdb2"
                        android:layout_marginEnd="4dp"
                        android:contentDescription="IMDb logo" />

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/star"
                        android:layout_marginEnd="4dp"
                        android:contentDescription="Star icon" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/card_bg"
            android:padding="8dp"
            android:layout_marginTop="16dp">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="150dp"
                android:src="@drawable/subseries5"
                android:scaleType="centerCrop" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="One Piece"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="One Piece (Live Action) is a bold and thrilling high-seas adventure that brings the beloved anime to life with heart, humor, and epic energy. It follows Monkey D. Luffy, a free-spirited dreamer with a rubbery body and an unbreakable will, as he sets sail with his crew to find the legendary treasure known as the One Piece. Along the way, they battle ruthless pirates, corrupt marines, and dangerous forces, all while forging a bond stronger than steel. Packed with emotional depth, jaw-dropping action, and rich world-building, this adaptation proves that chasing your dreams is the greatest journey of all. "
                    android:textColor="#CCCCCC"
                    android:textSize="12sp"
                    android:maxLines="4" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end|bottom"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/imdb2"
                        android:layout_marginEnd="4dp"
                        android:contentDescription="IMDb logo" />

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/star"
                        android:layout_marginEnd="4dp"
                        android:contentDescription="Star icon" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
