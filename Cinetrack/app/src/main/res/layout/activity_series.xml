<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">


        <TextView
            android:id="@+id/cineTrackHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="cursive"
            android:text="CineTrack"
            android:textColor="#FF0000"
            android:textSize="32sp"
            android:textStyle="bold" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            android:weightSum="2"
            android:gravity="center">

            <Spinner
                android:id="@+id/sortSpinnerFav"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp" />

            <Spinner
                android:id="@+id/filterSpinnerFav"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/card_bg"
            android:padding="8dp"
            android:layout_marginTop="16dp">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="150dp"
                android:src="@drawable/subseries1"
                android:scaleType="centerCrop" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Stranger Things"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="Stranger Things is a thrilling sci-fi mystery set in the small town of Hawkins, where a group of kids stumbles into a secret government experiment and a terrifying alternate dimension called the Upside Down. When young Will Byers disappears, his friends team up with a mysterious girl named Eleven who holds strange psychic powers and a hidden past. As dark forces rise and danger creeps into their world, friendship, courage, and nostalgia light the way. Blending supernatural chills with 80s charm, the series proves that even in the darkest shadows, the bonds of love and loyalty can save the day."
                    android:textColor="#CCCCCC"
                    android:textSize="12sp"
                    android:maxLines="4" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end|bottom"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/imdb2"
                        android:layout_marginEnd="4dp"
                        android:contentDescription="IMDb logo" />

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/star"
                        android:layout_marginEnd="4dp"
                        android:contentDescription="Star icon" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/card_bg"
            android:padding="8dp"
            android:layout_marginTop="16dp">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="150dp"
                android:src="@drawable/subseries2"
                android:scaleType="centerCrop" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Money Heist"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="Money Heist is a high-stakes crime thriller that follows a criminal mastermind known only as The Professor, who assembles a team of eight skilled misfits to pull off the biggest heist in history — printing billions at the Royal Mint of Spain. With red jumpsuits, Salvador Dalí masks, and code names based on cities, the group battles hostages, law enforcement, and emotional chaos inside and outside the walls. As loyalties shift and tensions explode, the show dives deep into themes of resistance, love, and sacrifice. It's a bold and brilliant rebellion that proves ideas are bulletproof."
                    android:textColor="#CCCCCC"
                    android:textSize="12sp"
                    android:maxLines="4" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end|bottom"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/imdb2"
                        android:layout_marginEnd="4dp"
                        android:contentDescription="IMDb logo" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/card_bg"
            android:padding="8dp"
            android:layout_marginTop="16dp">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="150dp"
                android:src="@drawable/subseries3"
                android:scaleType="centerCrop" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="LUPIN"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="Lupin is a gripping crime drama that follows Assane Diop, a charismatic and brilliant thief inspired by the legendary gentleman burglar Arsène Lupin. After his father is framed and destroyed by a powerful billionaire, Assane sets out on a daring mission to expose the truth and deliver justice. With clever disguises, flawless planning, and bold escapes, he challenges the system while keeping his identity hidden. Set against the elegant streets of Paris, the series masterfully blends mystery, heart, and vengeance, proving that brains, style, and a cause can turn any man into a legend."
                    android:textColor="#CCCCCC"
                    android:textSize="12sp"
                    android:maxLines="4" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end|bottom"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/imdb2"
                        android:layout_marginEnd="4dp"
                        android:contentDescription="IMDb logo" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/card_bg"
            android:padding="8dp"
            android:layout_marginTop="16dp">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="150dp"
                android:src="@drawable/subseries4"
                android:scaleType="centerCrop" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Wednesday"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="Wednesday is a dark, witty, and delightfully twisted coming-of-age mystery centered around Wednesday Addams — the sharp-tongued, emotionless daughter of the iconic Addams family. As she joins Nevermore Academy, a school for outcasts and the supernatural, Wednesday finds herself unraveling a chilling prophecy, investigating a monstrous killing spree, and uncovering secrets buried deep in her own family’s past. With her deadpan humor, gothic charm, and razor-sharp intellect, she turns every creepy moment into pure power. It’s a tale where mystery, misfits, and macabre brilliance collide in the most wickedly fun way."
                    android:textColor="#CCCCCC"
                    android:textSize="12sp"
                    android:maxLines="4" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end|bottom"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/imdb2"
                        android:layout_marginEnd="4dp"
                        android:contentDescription="IMDb logo" />

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/star"
                        android:layout_marginEnd="4dp"
                        android:contentDescription="Star icon" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/card_bg"
            android:padding="8dp"
            android:layout_marginTop="16dp">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="150dp"
                android:src="@drawable/subseries5"
                android:scaleType="centerCrop" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="One Piece"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="One Piece (Live Action) is a bold and thrilling high-seas adventure that brings the beloved anime to life with heart, humor, and epic energy. It follows Monkey D. Luffy, a free-spirited dreamer with a rubbery body and an unbreakable will, as he sets sail with his crew to find the legendary treasure known as the One Piece. Along the way, they battle ruthless pirates, corrupt marines, and dangerous forces, all while forging a bond stronger than steel. Packed with emotional depth, jaw-dropping action, and rich world-building, this adaptation proves that chasing your dreams is the greatest journey of all. "
                    android:textColor="#CCCCCC"
                    android:textSize="12sp"
                    android:maxLines="4" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end|bottom"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/imdb2"
                        android:layout_marginEnd="4dp"
                        android:contentDescription="IMDb logo" />

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/star"
                        android:layout_marginEnd="4dp"
                        android:contentDescription="Star icon" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
